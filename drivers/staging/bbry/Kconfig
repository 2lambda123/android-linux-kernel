config BBRY_HWFEATURES
	bool "Add sysfs entry from device tree hwfeature attribute"
	depends on BBRY
	default n
	---help---
	help
	  If unsure, say N.

config BBRY_PERSIST_RESET
	bool "Persist memory region for reset logs"
	depends on BBRY && ARCH_MSM8974
	default n
	---help---
	help
	  If unsure, say N.

config BBRY_PERSIST_RESET_V2
	bool "Persist memory region for reset logs - version 2"
	select PSTORE
	select PSTORE_RAM
	select PSTORE_CONSOLE
	depends on BBRY
	default n
	---help---
	help
	  If unsure, say N.

